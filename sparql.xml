      <item>RAND</item>
      <item>ABS</item>
      <item>CEIL</item>
      <item>FLOOR</item>
      <item>ROUND</item>
      <item>CONCAT</item>
      <item>STRLEN</item>
      <item>UCASE</item>
      <item>LCASE</item>
      <item>ENCODE_FOR_URI</item>
      <item>CONTAINS</item>
      <item>STRSTARTS</item>
      <item>STRENDS</item>
      <item>STRBEFORE</item>
      <item>STRAFTER</item>
      <item>YEAR</item>
      <item>MONTH</item>
